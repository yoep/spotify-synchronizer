<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">
    <changeSet id="1" author="master">
        <createTable tableName="TRACK">
            <column name="ID" type="UUID">
                <constraints primaryKey="true"/>
            </column>
            <column name="TITLE" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="ARTIST" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="URI" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="TYPE" type="VARCHAR(7)">
                <constraints nullable="false"/>
            </column>
            <column name="ALBUM" type="UUID">
                <constraints foreignKeyName="FK_TRACK_ALBUM_ID" referencedTableName="ALBUM" referencedColumnNames="ID"/>
            </column>
        </createTable>
    </changeSet>
</databaseChangeLog>