<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.*?>
<GridPane prefHeight="400.0" prefWidth="600.0" maxHeight="400.0" maxWidth="600.0"
          styleClass="splash" stylesheets="/styles/main.css" xmlns="http://javafx.com/javafx/8.0.121"
          xmlns:fx="http://javafx.com/fxml/1" fx:controller="be.studios.yoep.spotify.synchronizer.views.SplashView">
    <columnConstraints>
        <ColumnConstraints hgrow="ALWAYS"/>
    </columnConstraints>
    <rowConstraints>
        <RowConstraints vgrow="ALWAYS"/>
        <RowConstraints maxHeight="25" minHeight="25" prefHeight="25"/>
    </rowConstraints>
    <GridPane GridPane.columnIndex="0" GridPane.rowIndex="1">
        <columnConstraints>
            <ColumnConstraints hgrow="ALWAYS" maxWidth="Infinity"/>
            <ColumnConstraints hgrow="SOMETIMES" maxWidth="Infinity"/>
        </columnConstraints>
        <rowConstraints>
            <RowConstraints/>
        </rowConstraints>
        <padding>
            <Insets left="10" right="10"/>
        </padding>
        <Label fx:id="progressLabel" text="%loading" textFill="white" maxWidth="Infinity"
               GridPane.columnIndex="1" GridPane.halignment="RIGHT" GridPane.rowIndex="0"/>
    </GridPane>
</GridPane>
