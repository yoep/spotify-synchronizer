<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<GridPane prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1"
          fx:controller="be.studios.yoep.spotify.synchronizer.views.MainView">
    <columnConstraints>
        <ColumnConstraints hgrow="ALWAYS"/>
    </columnConstraints>
    <rowConstraints>
        <RowConstraints maxHeight="30" minHeight="30"/>
        <RowConstraints maxHeight="Infinity" vgrow="ALWAYS"/>
        <RowConstraints maxHeight="25" minHeight="25"/>
    </rowConstraints>

    <!-- MENU -->
    <fx:include source="menu_component.fxml" GridPane.columnIndex="0" GridPane.rowIndex="0"/>

    <!-- CONTENT -->
    <GridPane maxHeight="Infinity" maxWidth="Infinity" GridPane.columnIndex="0" GridPane.hgrow="ALWAYS" GridPane.rowIndex="1" GridPane.vgrow="ALWAYS">
        <columnConstraints>
            <ColumnConstraints maxWidth="150"/>
            <ColumnConstraints hgrow="ALWAYS" maxWidth="Infinity"/>
        </columnConstraints>
        <rowConstraints>
            <RowConstraints maxHeight="Infinity" vgrow="ALWAYS"/>
        </rowConstraints>

        <!-- LEFT MENU -->
        <GridPane maxWidth="Infinity" GridPane.columnIndex="0" GridPane.hgrow="ALWAYS" GridPane.rowIndex="0">
            <columnConstraints>
                <ColumnConstraints hgrow="ALWAYS" maxWidth="Infinity"/>
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="30"/>
                <RowConstraints minHeight="30"/>
            </rowConstraints>

            <Button text="%local_music" onAction="#onLocalMusicClick"
                    maxWidth="Infinity" GridPane.columnIndex="0" GridPane.hgrow="ALWAYS" GridPane.rowIndex="0"/>
            <Button text="%spotify_music" onAction="#onSpotifyMusicClick"
                    maxWidth="Infinity" GridPane.columnIndex="0" GridPane.hgrow="ALWAYS" GridPane.rowIndex="1"/>
            <GridPane.margin>
                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
            </GridPane.margin>
        </GridPane>

        <!-- CONTENT -->
        <TableView fx:id="localMusicList" maxWidth="Infinity" GridPane.columnIndex="1" GridPane.hgrow="ALWAYS" GridPane.rowIndex="0">
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
            </columnResizePolicy>
            <placeholder>
                <Label text="%no_music_found"/>
            </placeholder>
        </TableView>
        <TableView fx:id="spotifyMusicList" maxWidth="Infinity" visible="false" GridPane.columnIndex="1" GridPane.hgrow="ALWAYS" GridPane.rowIndex="0">
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
            </columnResizePolicy>
            <placeholder>
                <Label text="%no_music_found"/>
            </placeholder>
        </TableView>
    </GridPane>

    <!-- STATUS BAR -->
    <fx:include source="statusbar_component.fxml" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
</GridPane>
