<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import org.synchronizer.spotify.ui.elements.AlbumOverviewBox?>
<GridPane prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/8.0.172-ea" xmlns:fx="http://javafx.com/fxml/1"
          fx:controller="org.synchronizer.spotify.views.MainView">
    <columnConstraints>
        <ColumnConstraints maxWidth="Infinity" hgrow="ALWAYS"/>
    </columnConstraints>
    <rowConstraints>
        <RowConstraints maxHeight="30" minHeight="30"/>
        <RowConstraints maxHeight="Infinity" vgrow="ALWAYS"/>
        <RowConstraints maxHeight="75" minHeight="75"/>
    </rowConstraints>

    <!-- MENU -->
    <fx:include source="components/menu_component.fxml" GridPane.columnIndex="0" GridPane.rowIndex="0"/>

    <!-- CONTENT -->
    <AlbumOverviewBox fx:id="trackOverview" hbarPolicy="NEVER" GridPane.columnIndex="0" GridPane.rowIndex="1" maxWidth="Infinity"
                      fitToWidth="true"/>

    <!-- PLAYER -->
    <fx:include source="components/player_component.fxml" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
</GridPane>
