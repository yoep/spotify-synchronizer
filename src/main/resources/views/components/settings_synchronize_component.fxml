<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>
<?import org.synchronizer.spotify.ui.elements.Icon?>
<?import org.synchronizer.spotify.ui.Icons?>
<GridPane xmlns="http://javafx.com/javafx/8.0.172-ea" xmlns:fx="http://javafx.com/fxml/1"
          fx:controller="org.synchronizer.spotify.views.components.SettingsSynchronizeComponent">
    <columnConstraints>
        <ColumnConstraints hgrow="ALWAYS"/>
        <ColumnConstraints prefWidth="20"/>
    </columnConstraints>
    <rowConstraints>
        <RowConstraints/>
        <RowConstraints/>
    </rowConstraints>
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
    </padding>
    <hgap>5</hgap>
    <vgap>5</vgap>

    <!-- INFO -->
    <Text text="%settings_local_music_directory_description" GridPane.columnIndex="0" GridPane.columnSpan="3" GridPane.rowIndex="0"/>

    <!-- LOCAL MUSIC DIRECTORIES -->
    <ListView fx:id="localMusicDirectories" focusTraversable="false" maxHeight="100" maxWidth="Infinity"
              GridPane.columnIndex="0" GridPane.rowIndex="1"/>
    <VBox GridPane.columnIndex="1" GridPane.rowIndex="1">
        <spacing>5</spacing>
        <Button onMouseClicked="#openDirectoryPicker">
            <graphic>
                <Icon>
                    <Icons fx:constant="PLUS"/>
                </Icon>
            </graphic>
            <tooltip>
                <Tooltip text="%settings_local_music_directory_add"/>
            </tooltip>
        </Button>
        <Button fx:id="removeLocalDirectoryButton" disable="true" onMouseClicked="#removeSelectedDirectory">
            <graphic>
                <Icon>
                    <Icons fx:constant="MINUS"/>
                </Icon>
            </graphic>
            <tooltip>
                <Tooltip text="%settings_local_music_directory_remove"/>
            </tooltip>
        </Button>
    </VBox>
</GridPane>
